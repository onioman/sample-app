<script type="text/javascript">
	var charCount = 0;
	function updateCounter() {
		charCount = document.getElementById('PostText').value.length;
		document.getElementById('CharCounter').innerHTML = charCount.toString() + " of 140";
	}
</script>

<%= form_for(@micropost) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class='field'>
		<%= f.text_area :content, placeholder: "Compose new micropost...", onkeyup: "return updateCounter();",  id: "PostText" %>
	</div>
	<div id="CharCounter">
		0 of 140
	</div>
	<%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
